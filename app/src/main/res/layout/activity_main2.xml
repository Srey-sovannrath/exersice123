<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btnHome_act"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_margin="1dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnM_act"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="M"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/btnS_act"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="S"
                android:layout_margin="1dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="1dp"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btnAct1_act"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="Action1"
                android:layout_margin="2dp"
                />

            <Button
                android:id="@+id/btnAct2_act"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="Action2"
                android:layout_margin="2dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="1dp"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btnAct3_act"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="Action3"
                android:layout_margin="2dp"
                />

            <Button
                android:id="@+id/btnAct4_act"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="Action4"
                android:layout_margin="2dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="1dp"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btnAct5_act"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:text="Action5" />

            <Button
                android:id="@+id/btnAct6_act"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:text="Action6"></Button>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>